<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#ffffff">

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa phòng"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/tv_roomID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã Phòng"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginStart="10dp"/>
    <Spinner
        android:id="@+id/spinnerTypeUpdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/boder"/>

    <EditText
        android:id="@+id/edNumberRoomUpdate"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Số phòng"
        android:inputType="number"
        android:paddingStart="10dp"
        android:background="@drawable/boder"/>
    <EditText
        android:id="@+id/edPriceRoomUpdate"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Giá phòng"
        android:inputType="number"
        android:paddingStart="10dp"
        android:background="@drawable/boder"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btnUpdateRoomNew"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="SỬA"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/boderbutton"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/btnCancelRoomUpdate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/boderbutton"
            android:text="HỦY"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>