<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:orientation="vertical"

    tools:context=".fragment.AddUserFragment">


    <ImageView

        android:layout_width="202dp"

        android:layout_height="187dp"

        android:layout_gravity="center"

        android:src="@drawable/adduser" />

    <TextView

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginLeft="30sp"

        android:text="Họ Tên"

        android:textColor="#000000"

        android:textStyle="bold"

        />


    <EditText

        android:id="@+id/edthoTenadd"

        android:layout_width="318dp"

        android:layout_height="40dp"

        android:layout_gravity="center"

        android:background="@drawable/boder"

        android:paddingLeft="5sp" />


    <TextView

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginLeft="30sp"

        android:layout_marginTop="10sp"

        android:text="Email"

        android:textColor="#000000"

        android:textStyle="bold"

        />


    <EditText

        android:id="@+id/edtEmailadd"

        android:layout_width="318dp"

        android:layout_height="40dp"

        android:layout_gravity="center"

        android:background="@drawable/boder"

        android:paddingLeft="5sp" />

    <TextView

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginLeft="30sp"

        android:layout_marginTop="10sp"

        android:text="Username"

        android:textColor="#000000"

        android:textStyle="bold"

        />


    <EditText

        android:id="@+id/edtUsernameadd"

        android:layout_width="318dp"

        android:layout_height="40dp"

        android:layout_gravity="center"

        android:background="@drawable/boder"

        android:paddingLeft="5sp" />

    <TextView

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginLeft="30sp"


        android:layout_marginTop="10sp"

        android:text="Mật khẩu"

        android:textColor="#000000"

        android:textStyle="bold"

        />


    <EditText

        android:id="@+id/edtpassadd"

        android:layout_width="318dp"

        android:layout_height="40dp"

        android:layout_gravity="center"

        android:background="@drawable/boder"

        android:paddingLeft="5sp" />


    <Button

        android:id="@+id/btnthemUser"

        android:layout_width="274dp"

        android:layout_height="wrap_content"

        android:layout_gravity="center"

        android:layout_marginTop="20sp"

        android:background="@drawable/boderbutton"

        android:text="Thêm"

        android:textColor="@color/white"

        />


</LinearLayout>