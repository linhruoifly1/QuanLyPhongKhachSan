<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/radius"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Mã Hóa Đơn: "
                android:textStyle="bold"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tvIdBill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="15sp"
                android:textColor="#000000"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tên Khách Hàng: "
                android:textStyle="bold"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tvCustomerBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thái Hậu Nguyên Sinh"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tên Lễ Tân: "
                android:textStyle="bold"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tvReceptionistBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thái Hậu Nguyên Sinh"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tên Dịch Vụ: "
                android:textStyle="bold"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tvServiceBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thái Hậu Nguyên Sinh"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Check In: "
                android:textStyle="bold"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tvCheckIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thái Hậu Nguyên Sinh"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Check Out: "
                android:textStyle="bold"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tvCheckOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thái Hậu Nguyên Sinh"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Giờ ra thực tế: "
                android:textStyle="bold"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tvRealCheckOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thái Hậu Nguyên Sinh"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Giá phòng: "
                android:textStyle="bold"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tvCostRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thái Hậu Nguyên Sinh"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Giá dịch vụ: "
                android:textStyle="bold"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tvCostService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thái Hậu Nguyên Sinh"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Thuế VAT: "
                android:textStyle="bold"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tvVAT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thái Hậu Nguyên Sinh"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Trạng thái: "
                android:textStyle="bold"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tvStatusBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thái Hậu Nguyên Sinh"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Thành tiền: "
                android:textStyle="bold"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tvSumCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thái Hậu Nguyên Sinh"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/imgRoomBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/addroom"/>
    <ImageView
        android:id="@+id/imgDeleteBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="100dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/delete"/>
    <ImageView
        android:id="@+id/imgStatusBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/money"/>
</androidx.cardview.widget.CardView>