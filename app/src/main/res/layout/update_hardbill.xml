<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20sp">

    <TextView
        android:id="@+id/txtupdateIdHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <TextView
        android:id="@+id/txtupdatebillHard"
        android:layout_width="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content"

        />

    <Spinner
        android:id="@+id/spnNumberRoomUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10sp"
        />
    <EditText
        android:id="@+id/edtquantyPeopleUp"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="10sp"
        android:background="@drawable/boder"
        android:hint="Số lượng khách"
        android:paddingLeft="10sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btnUpHardBill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:background="@drawable/boderbutton"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btnCancleHardBillUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textColor="@color/white"
            android:layout_marginLeft="30sp"
            android:background="@drawable/boderbutton"
            />
    </LinearLayout>




</LinearLayout>