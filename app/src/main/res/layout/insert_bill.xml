<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:background="#ffffff">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm hóa đơn"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>
    <Spinner
        android:id="@+id/spinnerCustomerAdd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/radius"
        android:layout_marginBottom="10dp"/>
    <Spinner
        android:id="@+id/spinnerServiceAdd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/radius"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/edCheckIn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/radius"
        android:layout_marginBottom="10dp"
        android:inputType="none"
        android:focusable="false"
        android:cursorVisible="false"
        android:clickable="false"/>
    <EditText
        android:id="@+id/edCheckOut"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/radius"
        android:hint="Ngày Check Out"
        android:layout_marginBottom="10dp"
        android:inputType="none"
        android:focusable="false"
        android:cursorVisible="false"
        android:clickable="false"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btnAddBillNew"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="THÊM"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="#000000"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/btnCancelBillNew"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="HỦY"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:backgroundTint="#000000"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>