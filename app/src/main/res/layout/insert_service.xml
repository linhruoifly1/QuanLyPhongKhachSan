<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:background="#ffffff">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm dịch vụ"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>
    <EditText
        android:paddingStart="10dp"
        android:id="@+id/edNameServiceAdd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/boder"
        android:hint="Nhập tên dịch vụ"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edPriceServiceAdd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/boder"
        android:hint="Nhập giá dịch vụ"
        android:inputType="number"
        android:paddingStart="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnAddServiceNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/boderbutton"
            android:text="THÊM"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCancelServiceNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boderbutton"
            android:text="HỦY"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>