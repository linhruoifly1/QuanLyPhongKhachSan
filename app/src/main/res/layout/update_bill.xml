<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:background="#ffffff">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa hóa đơn"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khách hàng"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_margin="10dp"/>
    <Spinner

        android:id="@+id/spinnerCustomerUpdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/boder" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dịch vụ"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_margin="10dp"/>
    <Spinner
        android:id="@+id/spinnerServiceUpdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/boder" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày check out"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_margin="10dp"/>
    <EditText
        android:padding="10dp"
        android:id="@+id/edCheckOutUpdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/boder"
        android:hint="Ngày Check Out"
        android:inputType="none"
        android:focusable="false"
        android:cursorVisible="false"
        android:clickable="false"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btnUpdateBillNew"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="SỬA"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/boderbutton"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/btnCancelBillUpdate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="HỦY"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/boderbutton"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>